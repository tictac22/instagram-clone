{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"types": ["node"],
		"paths": {
			"@/components/*": ["./src/components/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/layouts/*": ["./src/layouts/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
